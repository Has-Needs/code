{
  "name": "has-needs-globe",
  "version": "0.1.0",
  "private": true,
  "description": "Peer-to-peer resource sharing platform for communities",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:agregore": "npm run build && node scripts/build-agregore.js",
    "deploy:ipfs": "./deploy-ipfs.sh",
    "bundle:agregore": "./create-agregore-bundle.sh",
    "setup:complete": "./setup-complete.sh",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@dxos/client": "^0.8.3",
    "@dxos/echo-schema": "^0.8.3",
    "@dxos/react-client": "^0.8.3",
    "@types/leaflet": "^1.9.8",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "leaflet": "^1.9.4",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "csstype": "^3.1.3",
    "ipfs-deploy": "^8.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "agregore": {
    "protocols": [
      "ssb",
      "ipfs",
      "ipns",
      "magnet",
      "hasneeds"
    ],
    "permissions": [
      "geolocation",
      "notifications"
    ],
    "cache": {
      "enabled": true,
      "maxSize": "1GB"
    }
  }
